{
  "$schema": "https://nile.sourcesensce.com/v1/schema",
  "$metadata": {
    "message_key": {
      "$path": [
        "nile://oracle/users/",
        "$.id"
      ]
    },
    "uid": "uid",
    "collection": "users",
    "cassandra_schema": "short_users"
  },
  "type": "object",
  "properties": {
    "uid": {
      "type": ["string", "null"],
      "$meta": "$.message_key"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "mail": {
      "type": "string",
      "required": true,
      "$path": "$.email"
    },
    "docType": {
      "type": ["string", "null"],
      "$fixed": "simpleUser"
    },
    "address": {
      "type": "string",
      "$path": [
        "$.address.city",
        ", ",
        "$.address.street"
      ]
    }
  }
}