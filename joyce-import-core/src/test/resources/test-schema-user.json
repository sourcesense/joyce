{
  "uid": "joyce:content:test:default:user:schema",
  "$schema": "https://joyce.sourcesensce.com/v1/schema",
  "metadata": {
    "domain": "test",
    "product": "default",
    "name": "user",
    "collection": "test-default-user",
    "description": "A test schema",
    "production": false,
    "parent": null,
    "uid": "code"
  },
  "type": "object",
  "required": null,
  "properties": {
    "code": {
      "type": "integer",
      "value": "$['src']['user_id']"
    },
    "full_name": {
      "type": "string",
      "apply": [
        {
          "handler": "extract",
          "args": [
            "$['src']['first_name']",
            " ",
            "$['src']['last_name']"
          ]
        }
      ],
      "email": {
        "type": "string"
      },
      "kind": {
        "type": "string",
        "value": "SimpleUser"
      }
    }
  }
}

