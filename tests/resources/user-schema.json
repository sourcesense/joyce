{
  "$schema": "https://joyce.sourcesense.com/v1/schema",
  "metadata": {
    "type": "import",
    "domain": "test",
    "product": "default",
    "name": "user",
    "description": "A test schema",
    "production": false,
    "validation": false,
    "uid": "code"
  },
  "type": "object",
  "properties": {
    "code": {
      "type": "integer",
      "value": "$.src.user_id"
    },
    "name": {
      "type": "string",
      "value": "$.src.first_name"
    },
    "surname": {
      "type": "string",
      "value": "$.src.last_name"
    },
    "full_name": {
      "type": "string",
      "apply": [
        {
          "handler": "script",
          "args": {
            "language": "python",
            "code": "'_'.join([ctx['src']['first_name'].upper(), ctx['src']['last_name'].upper()])"
          }
        }
      ]
    },
    "email": {
      "type": "string"
    }
  }
}
