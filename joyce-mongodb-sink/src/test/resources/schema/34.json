{
  "$schema": "https://joyce.sourcesense.com/v1/schema",
  "metadata": {
    "type": "import",
    "domain": "test",
    "product": "default",
    "name": "user",
    "description": "A test schema",
    "uid": "code",
    "production": false,
    "store": false,
    "indexes": [
      {
        "code": 1
      },
      {
        "full_name": 1
      },
      {
        "email": 1
      },
      {
        "kind": 1
      },
      {
        "code": 1,
        "full_name": 1,
        "email": 1,
        "kind": 1
      }
    ]
  },
  "bsonType": "object",
  "required": ["id"],
  "properties": {
    "id": {
      "type": "integer"
    },
    "stringProp": {
      "bsonType": "string",
      "value": "$['src']['user_id']"
    },
    "booleanProp": {
      "bsonType": "boolean"
    },
    "integerProp": {
      "bsonType": "integer"
    },
    "numberProp": {
      "bsonType": "number"
    },
    "objectProp": {
      "bsonType": "object",
      "required": [],
      "properties": {
        "nestedProp": {
          "bsonType": "string",
          "required": [],
          "apply": [{
            "handler": "extract",
            "args": ["$['src']['first_name']", " ", "$['src']['last_name']"]
          }]
        }
      }
    },
    "arrayProp": {
      "bsonType": "array",
      "items": {
        "bsonType": "object",
        "properties": {
          "booleanProp": {
            "bsonType": "boolean"
          },
          "integerProp": {
            "bsonType": "integer"
          },
          "numberProp": {
            "bsonType": "number"
          },
          "objectProp": {
            "bsonType": "object",
            "required": [],
            "properties": {
              "nestedProp": {
                "bsonType": "string",
                "required": [],
                "value": "SimpleUser"
              }
            }
          }
        }
      }
    }
  }
}
