{
    "name": "test-mazzinga",
    "description": "A Test mazzinga schema",
    "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "$metadata": {
            "message_key": {
                "$path": [
                    "nile://oracle/mazzinga/",
                    "$.id"
                ]
            },
            "uid": "uid",
            "collection": "mazzinga",
            "cassandra_schema": "short_mazzinga"
        },
        "type": "object",
        "required": [
            "uid",
            "codfis"
        ],
        "properties": {
            "uid": {
                "type": "string",
                "$meta": "$.message_key"
            },
            "codfis": {
                "type": "string"
            },
            "testBoolean": {
                "type": "boolean"
            },
            "mail": {
                "type": [
                    "string",
                    "null"
                ],
                "$path": "$.email"
            },
            "address": {
                "type": "string",
                "$path": [
                    "$.address.city",
                    ", ",
                    "$.address.street"
                ]
            }
        }
    }
}