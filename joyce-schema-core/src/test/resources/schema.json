{
  "$schema": "https://joyce.sourcesensce.com/v1/schema",
  "metadata": {
    "domain": "test",
    "product": "default",
    "type": "import",
    "name": "test",
    "uid": "uid"
  },
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "apply": [{
          "handler": "extract",
          "args": ["asd-", "$.src.id"]
        }]
    },
    "name": {
      "type": "string",
      "required": true
    },
    "mail": {
      "type": "string",
      "required": true,
      "value": "$.src.email"
    },
    "docType": {
      "type": ["string", "null"],
      "value": "simpleUser"
    },
    "address": {
      "type": "string",
      "apply": [{
        "handler": "extract",
        "args": ["$.src.address.city", ", ", "$.src.address.street"]
      }]
    }
  }
}
