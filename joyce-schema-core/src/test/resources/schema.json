{
  "$schema": "https://joyce.sourcesensce.com/v1/schema",
  "$metadata": {
    "name": "test",
    "type": "import",
    "uid": "uid",
    "collection": "users"
  },
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "$path": ["asd-", "$.id"]
    },
    "name": {
      "type": "string",
      "required": true
    },
    "mail": {
      "type": "string",
      "required": true,
      "$path": "$.email"
    },
    "docType": {
      "type": ["string", "null"],
      "$fixed": "simpleUser"
    },
    "address": {
      "type": "string",
      "$path": [
        "$.address.city",
        ", ",
        "$.address.street"
      ]
    }
  }
}
