{
  "$schema": "https://joyce.sourcesense.com/v1/schema",
  "metadata": {
    "subtype": "import",
    "name": "user",
    "description": "A test schema",
    "production": false,
    "uid": "id",
    "collection": "users"
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "value": "$.src.id"
    },
    "mappedArray": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "apply": [{
        "handler": "script",
        "args": {
          "language": "javascript",
          "code": "ctx.src.stringArray.map(s => s.toUpperCase())"
        }
      }]
    }
  }
}
