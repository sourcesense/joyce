{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": false,
    "lib": ["es6"],
    "noUnusedLocals": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
