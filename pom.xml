<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.4.4</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>com.sourcesense.nile</groupId>
	<artifactId>nile-parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>
  	<packaging>pom</packaging>

	<name>nile-parent</name>
	<description>Nile Parent Project</description>

	<properties>
		<java.version>11</java.version>
		<nile.common-core.version>0.1.0-SNAPSHOT</nile.common-core.version>
		<nile.import.core.version>0.0.1-SNAPSHOT</nile.import.core.version>
		<nile.connector-core.version>0.0.1-SNAPSHOT</nile.connector-core.version>
		<nile.schema-engine.version>0.0.1-SNAPSHOT</nile.schema-engine.version>
		<org.mapstruct.version>1.4.1.Final</org.mapstruct.version>
		<org.springdoc.version>1.5.5</org.springdoc.version>
		<ksqldb.version>0.17.0</ksqldb.version>
		<com.jayway.jsonpath.version>2.5.0</com.jayway.jsonpath.version>
		<com.networknt.version>1.0.50</com.networknt.version>
		<commons-codec.version>1.11</commons-codec.version>
		<io.reactivex.rxjava2.version>2.2.21</io.reactivex.rxjava2.version>
	</properties>

	<modules>
		<module>nile-schema-engine</module>
		<module>nile-connector-core</module>
		<module>nile-common-core</module>
	</modules>

	<organization>
		<name>Sourcesense</name>
		<url>https://sourcesense.com</url>
	</organization>

	<licenses>
		<license>
			<name>Apache License version 2.0</name>
			<url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
			<comments>A business-friendly OSS license</comments>
		</license>
	</licenses>

	<distributionManagement>
		<repository>
			<id>github</id>
			<name>GitHub OWNER Apache Maven Packages</name>
			<url>https://maven.pkg.github.com/sourcesense/nile-parent</url>
		</repository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>ksqlDB</id>
			<name>ksqlDB</name>
			<url>https://ksqldb-maven.s3.amazonaws.com/maven/</url>
		</repository>
		<repository>
			<id>confluent</id>
			<name>Confluent</name>
			<url>https://jenkins-confluent-packages-beta-maven.s3.amazonaws.com/6.2.0-beta210310224144-cp8/1/maven/</url>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.sourcesense.nile</groupId>
				<artifactId>nile-common-core</artifactId>
				<version>${nile.common-core.version}</version>
			</dependency>
			<dependency>
				<groupId>com.sourcesense.nile</groupId>
				<artifactId>nile-import-core</artifactId>
				<version>${nile.import.core.version}</version>
			</dependency>
			<dependency>
				<groupId>com.sourcesense.nile</groupId>
				<artifactId>nile-connector-core</artifactId>
				<version>${nile.connector-core.version}</version>
			</dependency>
			<dependency>
				<groupId>com.sourcesense.nile</groupId>
				<artifactId>nile-schema-engine</artifactId>
				<version>${nile.schema-engine.version}</version>
			</dependency>
			<dependency>
				<groupId>org.mapstruct</groupId>
				<artifactId>mapstruct</artifactId>
				<version>${org.mapstruct.version}</version>
			</dependency>
			<dependency>
				<groupId>org.springdoc</groupId>
				<artifactId>springdoc-openapi-ui</artifactId>
				<version>${org.springdoc.version}</version>
			</dependency>
			<dependency>
				<groupId>io.confluent.ksql</groupId>
				<artifactId>ksqldb-api-client</artifactId>
				<version>${ksqldb.version}</version>
				<exclusions>
					<exclusion>
						<groupId>org.slf4j</groupId>
						<artifactId>slf4j-api</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.slf4j</groupId>
						<artifactId>slf4j-log4j12</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>com.jayway.jsonpath</groupId>
				<artifactId>json-path</artifactId>
				<version>${com.jayway.jsonpath.version}</version>
			</dependency>
			<dependency>
				<groupId>com.networknt</groupId>
				<artifactId>json-schema-validator</artifactId>
				<version>${com.networknt.version}</version>
			</dependency>
			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>${commons-codec.version}</version>
			</dependency>
			<dependency>
				<groupId>io.reactivex.rxjava2</groupId>
				<artifactId>rxjava</artifactId>
				<version>${io.reactivex.rxjava2.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>



</project>
