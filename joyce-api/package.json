{
	"name": "joyce-api",
	"version": "1.3.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"mesh:build": "cross-env WORKDIR=${WORKDIR:=./workdir} node src/scripts/generate-models.js || mesh build --dir $WORKDIR",
		"mesh:clean": "cross-env WORKDIR=${WORKDIR:=./workdir} rm $WORKDIR/*",
		"mesh:start": "cross-env WORKDIR=${WORKDIR:=./workdir} mesh start --dir $WORKDIR",
		"generate": "cross-env WORKDIR=${WORKDIR:=./workdir} ts-node src/scripts/configure-graphql.ts --dir $WORKDIR",
		"build": "tsc",
		"start": "npm run generate build && npm run mesh:start",
		"mesh:live": "cross-env WORKDIR=${WORKDIR:=./workdir} mesh dev --dir $WORKDIR",
		"test": "jest --coverage",
		"test:watch": "npm run test -- --watchAll",
		"commit": "git cz",
		"lint": "npm run lint-prettify && eslint . --cache --ext .ts,.js",
		"lint-fix": "npm run lint-prettify && eslint . --cache --ext .ts,.js --fix",
		"lint-prettify": "prettier --write **/*.{js,ts,md,json}",
		"git-ignore-reset": "git rm -r --cached . && git add . && git commit -m \"[Fix] Removing all files in .gitignore\"",
		"pkg-clean": "rm -rf node_modules package-lock.json && npm install ",
		"pkg-update": "npm update",
		"pkg-upgrade": "npx npm-check-updates -u && npm install"
	},
	"_moduleAliases": {
		"@generated": "generated",
		"@templates": "src/templates",
		"@clients": "src/clients",
		"@src": "src"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@graphql-mesh/cli": "^0.38.1",
		"@graphql-mesh/mongoose": "^0.9.0",
		"@graphql-mesh/openapi": "^0.18.12",
		"@grpc/grpc-js": "^1.5.5",
		"@vercel/fetch": "^6.1.1",
		"apollo-server": "^3.3.0",
		"apollo-server-fastify": "^3.3.0",
		"cross-env": "^7.0.3",
		"dotenv": "^10.0.0",
		"fastify": "^3.20.2",
		"fastify-cors": "^6.0.2",
		"fastify-http-proxy": "^6.2.0",
		"fastify-oas": "^3.0.8",
		"fastify-static": "^4.2.3",
		"google-protobuf": "^3.19.4",
		"graphql": "^15.5.2",
		"grpc": "^1.24.11",
		"handlebars": "^4.7.7",
		"js-yaml": "^4.1.0",
		"kafka-node": "^5.0.0",
		"lodash": "^4.17.21",
		"module-alias": "^2.2.2",
		"mongodb": "^3.7.0",
		"mongoose": "^5.13.8",
		"node-fetch": "^2.6.1",
		"pino": "^6.13.1"
	},
	"devDependencies": {
		"@types/babel__core": "^7.1.15",
		"@types/cors": "^2.8.12",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.7.10",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"concurrently": "^6.2.0",
		"eslint": "^7.25.0",
		"eslint-plugin-jest": "^24.3.6",
		"git-cz": "^4.7.6",
		"grpc-tools": "^1.11.2",
		"grpc_tools_node_protoc_ts": "^5.3.2",
		"jest": "^27.1.0",
		"nodemon": "^2.0.12",
		"pino-pretty": "^7.5.1",
		"prettier": "^2.2.1",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.2"
	}
}
