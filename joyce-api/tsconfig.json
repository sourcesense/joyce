{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": false,
    "lib": ["ES2020"],
	"baseUrl": ".",
	"paths": {
		"@generated/*": ["generated/*"],
		"@templates/*": ["src/templates/*"],
		"@clients/*": ["src/clients/*"],
		"@src/*": ["src/*"],
	}
   // "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
